generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String
  role       String   @default("CHIEF_EXAMINER")
  schoolCode String? // For school heads
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Exam {
  id          Int      @id @default(autoincrement())
  examCode    String   @unique
  description String
  createdAt   DateTime @default(now())
  results     Result[]
}

model Result {
  id           Int      @id @default(autoincrement())
  examId       Int
  exam         Exam     @relation(fields: [examId], references: [id])
  schoolCode   String
  schoolName   String
  studentIndex String
  studentName  String
  english      Int
  mathematics  Int
  science      Int
  cre          Int
  socialStudy  Int
  totalScore   Int
  meanScore    Float
  createdAt    DateTime @default(now())

  @@unique([examId, studentIndex])
}

model School {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

